<launch>
  <!-- Arguments -->
    <remap from="mobile_base/commands/velocity" to="cmd_vel"/>
    <remap from="scan" to="scan/hokuyo"/>
    <arg name="use_sim_time"   default="true"/>
    <!-- <remap from="scan_multi" to="scan"/> -->
    <arg name="robot_real"     default="false"/>
    <arg name="map_name"       default="mapa_robocup_19"/>
    <arg name="worldname"      default="robocup19_home_arena"/>
    <group if="$(arg robot_real)">

      <include file="$(find kobuki_node)/launch/robot_with_tf.launch"/>
      
      <node pkg="urg_node" type="urg_node" name="scan"/>
      
    </group>

    <group unless="$(arg robot_real)">

        <include file="$(find jaime_gazebo)/launch/jaime.launch">
          <arg name="worldname" value="$(arg worldname)"/>
        </include>

        <include file="$(find merge_laser)/launch/dp2laser.launch"/>

        <include file="$(find merge_laser)/launch/lasermerger.launch"/>

    </group>
    
    <include file="$(find jaime_bringup)/launch/localization/localization.launch">
      
      <arg name="map_name" value="$(arg map_name)"/>
    </include>

    <include file="$(find jaime_bringup)/launch/navigation/navigation.launch">  
      
      <arg name="map_name" value="$(arg map_name)"/>
    </include>

</launch>
 