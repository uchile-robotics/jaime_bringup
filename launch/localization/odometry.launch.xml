<launch>  

    <arg name="map_name"  default="map"/>

    <!-- static map server -->
    <include file="$(find uchile_maps)/launch/map_server.launch">
        <arg name="map_name" value="$(arg map_name)"/>
    </include>

    <!-- Map analyzer -->
    <include file="$(find uchile_maps)/launch/map_analyzer.launch"/>

    <!-- fake localization -->
    <node pkg="fake_localization" type="fake_localization" name="fake_localization" ns="/jaime/nav/">
        <remap from="base_pose_ground_truth" to="/jaime/nav/odom"/>
        <remap from="initialpose"            to="/jaime/nav/initialpose"/>
        <remap from="amcl_pose"              to="/jaime/nav/amcl_pose"/>
        <remap from="particlecloud"          to="/jaime/nav/particlecloud"/>
        <rosparam file="$(find jaime_bringup)/params/localization/fake.yaml" command="load"/> 
    </node>

</launch>
